{
  "name": "Post Processing Hack Editor",
  "short_name" : "Post Processing Hack Editor" ,
  "version": "0.12",
  "manifest_version" : 2,
  "description": "Edit a pass of postprocessing shader on top of a live web page canvas element.",
  "background" : {
    "scripts" : ["action.js"]
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab"
  ],
  "offline_enabled": true,
  "web_accessible_resources": ["shaders/main.vert", "shaders/main.frag"],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}